#include <stdio.h>

// este programa armazenará duas médias distintas em uma matriz e retornará a maior média, junto com a mátricula.

int main(){
    int i,j, M[2][4], maior;
    float mediafinais=0;
    
    //primeira parte
    
    for(i=0;i<2;i++){                              /* Apenas dois alunos, conforme o vetor [2] */
        
        
        printf("Numero da Matricula [%d] : ",i      /*,j*/);
      
        scanf("%d", &M[i][0]);                     /* matricula */
        
        printf("Media das provas ------ : ");
        
        scanf("%d", &M[i][1]);                     /* primeira media */
       
        printf("Media dos trabalhos --- : ");
       
        scanf("%d", &M[i][2]);                     /* segunda media */
        
        M[i][3] = (M[i][1] + M[i][2]) / 2;         /* nota final  */
        
    }
    
    //segunda parte
    
    for(i=0;i<2;i++){
        for(j=0;j<4;j++)
        {
            M[i][3] = (M[i][1] + M[i][2]) / 2;
            mediafinais =  M[i][3] + M[3] / 5;
        }
    }

    //terceira parte
  
    maior=M[0][3];
    int x=0;
    for(i=0;i<2;i++){
        for(j=0;j<=4;j++){
            if(maior<M[i][3]){
                maior=M[i][3];
                x=i;
            }
        }
    }
    
    //resultados
    
    printf("\nA Maior Nota Final é do aluno com a mátricula: %d", M[x][0]);
   
    printf("\n\nMedia das notas finais: %.2f ", mediafinais);
    
    printf("\n\n\n");

    return 0;

}   